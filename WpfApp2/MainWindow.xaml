                <Button Grid.Row="3" Grid.Column="0" x:Name="btn__xy" Background="#FF949595" Click="btn_op__Click"  >x^y</Button>
                <Button Grid.Row="3" Grid.Column="1" x:Name="btn__perc" Click="btn_op__Click" Background="#FF949595" >%</Button>

